    "shade_color": {
      "description": "RGB values for shadow color",
      "items": {
        "maximum": 255,
        "minimum": 0,
        "type": "integer"
      },
      "maxItems": 4,
      "minItems": 3,
      "title": "Shade Color",
      "type": "array"
    },
    "text_list": {
      "description": "Structured text entries for display",
      "items": {
        "items": {
          "anyOf": [
            {
              "$ref": "#/$defs/TextField"
            },
            {
              "type": "string"
            }
          ]
        },
        "type": "array"
      },
      "minItems": 1,
      "title": "Text List",
      "type": "array"
