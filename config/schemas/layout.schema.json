    "title_margin_top": {
      "description": "Top margin for title",
      "minimum": 0,
      "title": "Title Margin Top",
      "type": "integer"
    },
    "shade_offset": {
      "description": "Shadow offset values",
      "maxItems": 2,
      "minItems": 2,
      "prefixItems": [
        {
          "type": "integer"
        },
        {
          "type": "integer"
        }
      ],
      "title": "Shade Offset",
      "type": "array"
    },
    "text_color": {
      "description": "RGB values for text color",
      "items": {
        "maximum": 255,
        "minimum": 0,
        "type": "integer"
      },
      "maxItems": 4,
      "minItems": 3,
      "title": "Text Color",
      "type": "array"
