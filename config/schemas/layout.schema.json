  "properties": {
    "grid_shape": {
      "description": "Grid size as [rows, columns], each >=1",
      "maxItems": 2,
      "minItems": 2,
      "prefixItems": [
        {
          "minimum": 1,
          "type": "integer"
        },
        {
          "minimum": 1,
          "type": "integer"
        }
      ],
      "title": "Grid Shape",
      "type": "array"
    },
    "font_list": {
      "description": "Indexes of fonts to use",
      "items": {
        "type": "integer"
      },
      "minItems": 1,
      "title": "Font List",
      "type": "array"
    },
    "time_font": {
      "description": "Index of font for time display",
      "title": "Time Font",
      "type": "integer"
    },
    "horizontal_spacing": {
      "description": "Horizontal spacing in pixels",
      "minimum": 0,
      "title": "Horizontal Spacing",
      "type": "integer"
    },
    "vertical_spacing": {
      "description": "Vertical spacing in pixels",
      "minimum": 0,
      "title": "Vertical Spacing",
      "type": "integer"
    },
    "content_margin_left": {
      "description": "Left margin for content",
      "minimum": 0,
      "title": "Content Margin Left",
      "type": "integer"
    },
    "content_margin_top": {
      "description": "Top margin for content",
      "minimum": 0,
      "title": "Content Margin Top",
      "type": "integer"
    },
    "title_margin_left": {
      "description": "Left margin for title",
      "minimum": 0,
      "title": "Title Margin Left",
      "type": "integer"
