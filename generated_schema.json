{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "fonts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "path": {
                        "type": "string"
                    },
                    "size": {
                        "type": "integer"
                    }
                },
                "required": [
                    "path",
                    "size"
                ]
            }
        },
        "font_list": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "time_font": {
            "type": "integer"
        },
        "horizontal_spacing": {
            "type": "integer"
        },
        "vertical_spacing": {
            "type": "integer"
        },
        "content_margin_left": {
            "type": "integer"
        },
        "content_margin_top": {
            "type": "integer"
        },
        "title_margin_left": {
            "type": "integer"
        },
        "title_margin_top": {
            "type": "integer"
        },
        "shade_offset": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "text_color": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "shade_color": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "text_list": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "field": {
                                    "type": "string"
                                },
                                "key": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "field",
                                "key"
                            ]
                        }
                    ]
                }
            }
        },
        "pos_list": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "integer"
                }
            }
        }
    },
    "required": [
        "content_margin_left",
        "content_margin_top",
        "font_list",
        "fonts",
        "horizontal_spacing",
        "pos_list",
        "shade_color",
        "shade_offset",
        "text_color",
        "text_list",
        "time_font",
        "title_margin_left",
        "title_margin_top",
        "vertical_spacing"
    ]
}