{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "fonts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": [
          "path",
          "size"
        ]
      }
    },
    "font_list": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "integer"
      }
    },
    "time_font": {
      "type": "integer"
    },
    "spacing": {
      "type": "integer",
      "minimum": 0
    },
    "shade_offset": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "integer"
      }
    },
    "text_color": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      }
    },
    "shade_color": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      }
    },
    "text_list": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "field": {
                  "type": "string"
                },
                "key": {
                  "type": "string"
                }
              },
              "required": [
                "field",
                "key"
              ]
            }
          },
          {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        ]
      }
    },
    "pos_list": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": {
          "type": "integer"
        }
      }
    }
  },
  "required": [
    "fonts",
    "font_list",
    "time_font",
    "spacing",
    "shade_offset",
    "text_color",
    "shade_color",
    "text_list",
    "pos_list"
  ]
}